<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>CMO 3D Online</title>
<style>
body{margin:0;overflow:hidden;background:#000;}
</style>
</head>
<body>

<script src="https://cdn.jsdelivr.net/npm/three@0.158.0/build/three.min.js"></script>
<script src="https://unpkg.com/gun/gun.js"></script>

<script>
// ===== 기본 3D 세팅 =====
const scene = new THREE.Scene();
scene.background = new THREE.Color(0x202020);

const camera = new THREE.PerspectiveCamera(75, window.innerWidth/window.innerHeight, 0.1, 1000);
camera.position.set(0,5,10);

const renderer = new THREE.WebGLRenderer();
renderer.setSize(window.innerWidth, window.innerHeight);
document.body.appendChild(renderer.domElement);

const light = new THREE.DirectionalLight(0xffffff,1);
light.position.set(5,10,5);
scene.add(light);

// 바닥
const floor = new THREE.Mesh(
  new THREE.PlaneGeometry(50,50),
  new THREE.MeshStandardMaterial({color:0x333333})
);
floor.rotation.x = -Math.PI/2;
scene.add(floor);

// ===== 온라인 (Gun.js) =====
const gun = Gun(["https://gun-manhattan.herokuapp.com/gun"]);
const room = gun.get("cmo3droom");

const myId = Math.random().toString(36).substring(2);
let meshes = {};

// ===== 내 캐릭터 (고양이 느낌) =====
const myMesh = new THREE.Group();

// 머리
const head = new THREE.Mesh(
  new THREE.SphereGeometry(0.6, 24, 24),
  new THREE.MeshStandardMaterial({ color: 0x00ff00 })
);
head.position.y = 0.6;
myMesh.add(head);

// 귀
const earGeo = new THREE.ConeGeometry(0.22, 0.35, 16);
const earMat = new THREE.MeshStandardMaterial({ color: 0x00ff00 });

const earL = new THREE.Mesh(earGeo, earMat);
earL.position.set(-0.28, 1.05, 0);
earL.rotation.z = 0.15;
myMesh.add(earL);

const earR = new THREE.Mesh(earGeo, earMat);
earR.position.set(0.28, 1.05, 0);
earR.rotation.z = -0.15;
myMesh.add(earR);

// 몸통
const body = new THREE.Mesh(
  new THREE.CapsuleGeometry(0.35, 0.6, 6, 16),
  new THREE.MeshStandardMaterial({ color: 0x00dd00 })
);
body.position.y = 0.05;
myMesh.add(body);

scene.add(myMesh);
meshes[myId] = myMesh;

// ===== 다른 플레이어 =====
room.map().on((data,id)=>{
  if(!data || id===myId) return;

  if(!meshes[id]){
    const m = new THREE.Mesh(
      new THREE.BoxGeometry(1,1,1),
      new THREE.MeshStandardMaterial({color:0xff0000})
    );
    scene.add(m);
    meshes[id] = m;
  }

  meshes[id].position.set(data.x,data.y,data.z);
});

// ===== 이동 + 점프 =====
let pos = {x:0,y:0,z:0};
let velocityY = 0;
let gravity = -0.01;
let isOnGround = true;

document.addEventListener("keydown",(e)=>{
  if(e.key==="w") pos.z-=0.3;
  if(e.key==="s") pos.z+=0.3;
  if(e.key==="a") pos.x-=0.3;
  if(e.key==="d") pos.x+=0.3;

  if(e.code==="Space" && isOnGround){
    velocityY = 0.25;
    isOnGround = false;
  }
});

// ===== 애니메이션 =====
function animate(){
  requestAnimationFrame(animate);

  // 점프 물리
  velocityY += gravity;
  pos.y += velocityY;

  if(pos.y <= 0){
    pos.y = 0;
    velocityY = 0;
    isOnGround = true;
  }

  myMesh.position.set(pos.x,pos.y,pos.z);
  room.get(myId).put(pos);

  camera.position.x = myMesh.position.x;
  camera.position.z = myMesh.position.z + 5;
  camera.lookAt(myMesh.position);

  renderer.render(scene,camera);
}
animate();
</script>

</body>
</html>
